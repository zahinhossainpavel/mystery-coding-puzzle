#include <iostream>
#include <string>

std::string generatePattern(int n, int i = 0, int j = 0, std::string pattern = "") {
    if (i == n) {
        return pattern;
    }

    int value = (i + j) % n + 1;
    pattern += std::to_string(value);

    if (j < n - 1) {
        pattern += " ";
        return generatePattern(n, i, j + 1, pattern);
    } else {
        pattern += "\n";
        return generatePattern(n, i + 1, 0, pattern);
    }
}

int main() {
    int n = 5;  // You can change this value to adjust the pattern size
    std::string pattern = generatePattern(n);
    std::cout << pattern;

    return 0;
}
