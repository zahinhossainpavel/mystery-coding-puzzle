#include <iostream>
#include <string>

std::string P(int n, int i = 0, int j = 0, std::string p = "") {
    if (i == n) return p;
    int v = (i + j) % n + 1;
    p += std::to_string(v);
    if (j < n - 1) { p += " "; return P(n, i, j + 1, p); }
    p += "\n";
    return P(n, i + 1, 0, p);
}

int main() {
    int n = 5; std::string p = P(n); std::cout << p;
    return 0;
}
