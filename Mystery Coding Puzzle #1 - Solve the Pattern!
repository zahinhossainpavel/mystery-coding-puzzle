#include <iostream>

void printPattern(int n, int i, int j) {
    if (i == n) {
        return;  // Base case, stop the recursion when i reaches n
    }

    int value = (i + j) % n + 1;
    std::cout << value;

    if (j < n - 1) {
        printPattern(n, i, j + 1);  // Recurse to the next column
    } else {
        std::cout << std::endl;  // Move to the next row
        printPattern(n, i + 1, 0);  // Recurse to the next row
    }
}

int main() {
    int n = 5; // You can change this value to adjust the pattern size
    printPattern(n, 0, 0);

    return 0;
}
